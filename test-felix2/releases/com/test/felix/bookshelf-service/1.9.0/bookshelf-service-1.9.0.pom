<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.test.felix</groupId>
    <artifactId>bookshelf-service</artifactId>
    <version>1.9.0</version>
    <packaging>bundle</packaging>
    <name>Bookshelf Service</name>
    <description>The Bookshelf Service</description>

    <dependencies>
        <dependency>
            <groupId>com.test.felix</groupId>
            <artifactId>bookshelf-inventory-api</artifactId>
            <version>1.5.0</version>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>4.2.0</version>
        </dependency>
        <dependency>
            <groupId>com.test.felix</groupId>
            <artifactId>bookshelf-log-api</artifactId>
            <version>1.10.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.1.0</version>
                <extensions>true</extensions>

                <configuration>
                    <instructions>
                        <Bundle-Category>sample</Bundle-Category>
                        <Bundle-SymbolicName>${artifactId}</Bundle-SymbolicName>

                        <!--<Bundle-Activator>
                            com.test.felix.bookshelf.service.impl.activator.BookshelfServiceImplActivator
                        </Bundle-Activator>-->
                        <Private-Package>
                            com.test.felix.bookshelf.service.impl.activator
                        </Private-Package>

                        <Export-Package>
                            com.test.felix.bookshelf.service.api,com.test.felix.bookshelf.service.impl
                        </Export-Package>
                    </instructions>
                    <remoteOBR>repo-rel</remoteOBR>
                    <prefixUrl>
                        file:///Users/amin/Work/sometotest/test-felix2/releases
                    </prefixUrl>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <inherited>true</inherited>
                <configuration>
                    <source>6</source>
                    <target>6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-ipojo-plugin</artifactId>
                <version>1.6.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>ipojo-bundle</goal>
                        </goals>
                        <configuration>
                            <metadata>src/main/ipojo/meta.xml</metadata>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


        </plugins>
    </build>

    <distributionManagement>
        <!-- releases repo -->
        <repository>
            <id>repo-rel</id>
            <url>file:///Users/amin/Work/sometotest/test-felix2/releases</url>
        </repository>
    </distributionManagement>


</project>